<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/gl_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ls"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/gl_top"
        app:layout_constraintLeft_toRightOf="@id/gl_left"
        app:layout_constraintRight_toLeftOf="@id/gl_right"
        app:layout_constraintBottom_toTopOf="@id/gl_bottom" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/hs_empty_spell_card"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_name_top"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_name_bottom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_name_left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_name_right"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88"/>

    <com.jcstudio.hearthstoneairemote.SpellNameTextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="超級賽亞人 孫悟空"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/gl_name_top"
        app:layout_constraintBottom_toTopOf="@id/gl_name_bottom"
        app:layout_constraintLeft_toLeftOf="@id/gl_name_left"
        app:layout_constraintRight_toRightOf="@id/gl_name_right"
        android:textColor="@android:color/white"
        android:shadowRadius="3"
        app:relative_to="height"
        app:ratio="0.4"
        android:shadowColor="@android:color/black"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_flag_top"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_text_left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.19"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_text_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.84"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_card_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <com.jcstudio.hearthstoneairemote.RelativeSizeTextView
        android:id="@+id/tv_flag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="對所有敵方手下早成 3 點傷害"
        android:textColor="@android:color/black"
        app:relative_to="width"
        app:ratio="0.1"
        app:layout_constraintTop_toBottomOf="@id/gl_flag_top"
        app:layout_constraintLeft_toRightOf="@id/gl_text_left"
        app:layout_constraintRight_toLeftOf="@id/gl_text_right"
        app:layout_constraintBottom_toTopOf="@id/gl_card_bottom"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_cost_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_cost_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_cost_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_cost_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.29"/>

    <com.jcstudio.hearthstoneairemote.RelativeSizeTextView
        android:id="@+id/tv_cost"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="10"
        android:includeFontPadding="false"
        android:textStyle="bold"
        app:ratio="0.9"
        app:relative_to="height"
        app:layout_constraintTop_toBottomOf="@id/gl_cost_top"
        app:layout_constraintBottom_toTopOf="@id/gl_cost_bottom"
        app:layout_constraintLeft_toRightOf="@id/gl_cost_left"
        app:layout_constraintRight_toLeftOf="@id/gl_cost_right"
        android:shadowColor="@android:color/black"
        android:shadowRadius="5"/>

</android.support.constraint.ConstraintLayout>